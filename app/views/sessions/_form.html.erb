<%= form_with url: sessions_path, local: true do |form| %>

  <%= render 'shared/flash_messages' unless flash.empty? %>

  <p>
    <%= form.label :email %>
    <%= form.text_field :email, id: :email %>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.password_field :password, id: :password %>
  </p>

  <div class="actions">
    <%= form.submit 'Sign In' %>
  </div>
<% end %>
