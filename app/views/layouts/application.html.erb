<!DOCTYPE html>
<html>
  <head>
    <title>Test Guru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- Navigation Start !-->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Test Guru</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% if signed_in? %>
            <li class="nav-item">
              <%= link_to "Log Out", logout_path, class:"nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="/sign-in">Sign In</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sign-up">Register</a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Navigation End !-->
  <% if signed_in? %>
    <p class="text-center">Welcome, <b><%= current_user.username.capitalize %></b> Guru</p>
  <% end %>
  <%= yield %>
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <small class="d-block m-0">A project for <%= link_to 'Thinknetica', 'http://thinknetica.com/' %>
            online-school
          </small>
          <small>&copy; Copyrights <%= current_year %>. All Rights Reserved.
            <%= github_url('annakai', 'testguru') %></small>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
